<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#fff"
            android:weightSum="30">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="28"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employeeNameListId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee Name"
                    android:gravity="center|left"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/employeePhoneListId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="@color/GreyBlack"
                    android:layout_gravity="center"
                    android:text="10:00 AM"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/employeeEmailListId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="@color/GreyBlack"
                    android:layout_gravity="center"
                    android:text="6:00 PM"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/deleteEmployeeFromListId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete_sweep_24"
                    android:padding="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
