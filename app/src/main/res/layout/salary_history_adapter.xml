<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#fff"
            android:weightSum="30"
            android:gravity="center|left">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employeeNameHistoryId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee Name"
                    android:gravity="center|left"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textColor="@color/GreyBlack"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Check In: "/>

                    <TextView
                        android:id="@+id/checkInRecordHistoryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textColor="@color/GreyBlack"
                        android:layout_gravity="center"
                        android:text="10:00 AM"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textColor="@color/GreyBlack"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Check Out: "/>

                    <TextView
                        android:id="@+id/checkOutRecordHistoryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textColor="@color/GreyBlack"
                        android:layout_gravity="center"
                        android:text="6:00 PM"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textColor="@color/GreyBlack"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Work Hours: "/>

                    <TextView
                        android:id="@+id/workHourHistoryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textColor="@color/GreyBlack"
                        android:layout_gravity="center"
                        android:text="8"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textColor="@color/GreyBlack"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Remuneration: "/>

                    <TextView
                        android:id="@+id/remunerationHistoryId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textColor="@color/GreyBlack"
                        android:layout_gravity="center"
                        android:text="1000 BDT"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/deleteEmployeeHistoryId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete_sweep_24"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/green_border"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paid"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textColor="@color/Green"
                        android:layout_gravity="center"
                        android:padding="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
